<Window x:Class="PartnersMatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartnersMatcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="button1" Content="Sign In" HorizontalAlignment="Stretch" Margin="0,50,0,0" VerticalAlignment="Top" Width="150" Height="50" Click="sign"/>
        <Button x:Name="button2" Content="New User" HorizontalAlignment="Stretch" Margin="0,110,0,0" VerticalAlignment="Top" Width="150" Height="50" Click="newUser"/>
        <Button x:Name="button3" Content="Continue As Guest" HorizontalAlignment="Stretch" Margin="0,170,0,0" VerticalAlignment="Top" Width="150" Height="50" Click="guest"/>
    </Grid>
</Window>
