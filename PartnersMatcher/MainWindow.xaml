<Window x:Class="PartnersMatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartnersMatcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="button1" Grid.ColumnSpan="2" Content="Sign In" HorizontalAlignment="Left" Margin="410,10,0,0" VerticalAlignment="Top" Width="80" Click="signIn"/>
        <Button x:Name="button2" Grid.ColumnSpan="2" Content="New User" HorizontalAlignment="Left" Margin="410,40,0,0" VerticalAlignment="Top" Width="80" Click="newUser"/>
        <ListBox Name="posts" HorizontalContentAlignment="Stretch" Grid.ColumnSpan="1" SelectionChanged="posts_SelectionChanged" ItemsSource="{Binding Source=l}"></ListBox>
    </Grid>
</Window>
